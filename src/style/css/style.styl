/* ------------- Меню ---------------*/




.menu
	margin-top 30px
	padding-top 5px
	border-top 1px solid #999
	padding-top 20px
.menu__item
	height 40px
	float left
	white-space nowrap
	margin-right 4%
	transition-duration .4s
	&:hover
		.submenu
			display block
			opacity 1
	@media (max-width: 1225px)
		margin-right 3%
.menu__item:last-child
	margin-right 0
.menu__link
	text-transform uppercase
	font-family 'Exo 2'
	font-weight 600
	font-size 16px
.menu__link_hide
	text-transform uppercase
	font-family 'Exo 2'
	font-weight 600
	font-size 16px
	cursor pointer
.submenu
	display none
	opacity 0
	z-index 100
	margin-top 15px
	transition-duration 1s
	position absolute
	background $bluecolor
	max-width 300px
.submenu:before
	content ""
	display block
	margin-left 20px
	margin-top -7px
	width: 0;
	height: 0;
	position absolute
	border-style: solid;
	border-width: 0 7px 7px 7px;
	border-color: transparent transparent $bluecolor transparent;
.submenu__item
	color #fff
	text-transform none
	display block
	border-bottom 1px solid rgba(255,255,255,0.4)
	padding 8px 15px 8px 15px
.submenu__item:last-child
	border none
.submenu__link
	color #fff



