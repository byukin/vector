
$bluecolor = #317fb4
$edit = #c2fcc4

@import url('layout.css')
@import url('fonts/exo/font.css')
@import url('fonts/ubuntu/font.css')
@import url('fonts/bender/font.css')
@import url('../js-libs/owl-carousel/owl.carousel.css')

body
	padding 0
	margin 0
	font-family 'Ubuntu', sans-serif
	font-size 16px
	line-height 24px
	-webkit-font-smoothing: antialiased;
	-moz-font-smoothing: antialiased;
	-o-font-smoothing: antialiased;
	font-smoothing: antialiased;
.clearfix:after{
	content "."
	display block
	height 0
	visibility hidden
	clear both
}
ul,li
	margin 0
	padding 0
	list-style-type none
a
	text-decoration none
	color #000
	border-bottom none
	padding-bottom 1px
	&:hover
		color $bluecolor
		border-bottom 1px solid rgba(50,127,179,0.5)
h1
	font-size 30px;
	line-height 36px;
	font-weight normal
h2
	font-size 30px;
	line-height 36px;
	font-weight normal
h3
	font-size 16px
	line-height 24px
	font-weight normal


/* ------------- Шапка ---------------*/




section:nth-child(1)
	background url(icons/dots.png)
.header-logo__img
	width 100px
.header-logo__link
	&:hover
		border none
.header-description__text
	font-family 'Bender'
	font-size 19px
	line-height 25px
	color #666
.header-description__text_blue
	font-weight bold
	color $bluecolor
.header-contacts
	font-family 'Exo 2'
.header-contacts__icon
	display block
	float left
	width 50px
	height 50px
	background url(icons/phoneicon.png)
	margin-right 15px
.header-contacts__text
	font-size 15px
.header-contacts__phone
	font-size 20px
	line-height 30px
.header-contacts__phone_gray
	color #999
.header-submit__button
	width 200px
	background $bluecolor
	font-family 'Exo 2'
	font-weight 500
	border none
	color #fff
	text-transform uppercase
	padding 10px 20px 10px 20px
	font-size 13px
	box-sizing border-box
	border-radius 3px
	cursor pointer
	transition-duration .3s
	&:hover
		background #4892C3
	&:active
		background #50647F




/* ------------- Меню ---------------*/



section:nth-child(2)
	background url(icons/dots.png)
.menu
	margin-top -30px
	border-top 1px solid #999
	padding-top 20px
.menu__item
	transition-duration .4s
.menu__link
	text-transform uppercase
	font-family 'Exo 2'
	font-weight 600
	font-size 16px
.menu__link_hide
	text-transform uppercase
	font-family 'Exo 2'
	font-weight 600
	font-size 16px
	cursor pointer
.submenu
	display none
	opacity 0
	z-index 100
	margin-top 15px
	transition-duration 1s
	position absolute
	background $bluecolor
	max-width 300px
.submenu:before
	content ""
	display block
	margin-left 20px
	margin-top -7px
	width: 0;
	height: 0;
	position absolute
	border-style: solid;
	border-width: 0 7px 7px 7px;
	border-color: transparent transparent $bluecolor transparent;
.submenu__item
	color #fff
	text-transform none
	display block
	border-bottom 1px solid rgba(255,255,255,0.4)
	padding 8px 15px 8px 15px
.submenu__item:last-child
	border none
.submenu__link
	color #fff
	&:hover
		color #fff
		border-bottom 1px solid rgba(255,255,255,0.4)



/* ------------- Слайдер ---------------*/



section:nth-child(3)
	background url(icons/dots.png)
	position relative
section:nth-child(3):before
	background-image url(img/lines.svg)
	background-size cover
	background-repeat no-repeat
	content ""
	position absolute
	z-index -1
