/* -------- Cравнение затрат ----------*/

section.compare
	background-image url(../img/dots.png)
.compare__title
	font-family bender
	font-weight bold
	text-transform uppercase
	letter-spacing 6px
	text-align center
.compare__title:before
	position absolute
	content ""
	width 28%
	border-top 1px solid #ccc
	top 70px;
	display block
.compare__title:after
	position absolute
	content ""
	width 28%
	right 30px
	border-top 1px solid #ccc
	top 70px;
	display block
.compare__text
	font-weight 300
	line-height 28px
	max-width 50%
	margin 0 auto
	text-align center
.compare-item
	width 50%
	margin-top 40px
	padding-left 50px
	float left
	border-right 1px dashed #ccc
	box-sizing border-box
	&:last-child
		border none
.compare-item__title
	margin-top 30px
	font-family bender
	font-size 20px
	letter-spacing 2px
	font-weight bold
	text-transform uppercase
	color $bluecolor
.compare-item__graph
	display block
	margin-top 30px
	width 50%
	margin-right 5%
	float left
.compare-item__description
	float left
	width 45%
	margin-top 60px
.compare-item__list
	display block
.compare-item__list:before
	content ""
	display inline-block
	width 5px
	height 5px
	vertical-align middle
	background #000
	margin-right 10px
	margin-top -3px
	transform: rotate(45deg);
.compare-item__list:nth-child(1):before
	background #329bd3
.compare-item__list:nth-child(2):before
	background #ebb200
.compare-item__list:nth-child(3):before
	background #d55489
.compare-item__list:nth-child(4):before
	background #a299df
.compare-item__list:nth-child(5):before
	background #32d5cb

.compare-item__result
	font-weight 300
	text-align center
	display inline-block
	width 80%
	clear both
	margin 0 auto
	margin-top 30px
.compare-item__price
	font-size 27px
	padding-bottom 60px
	color #a2a2a2
	text-align center
	font-family exolight
	margin-top 30px
	width 80%

