	margin 0
	font-family 'Ubuntu', sans-serif
	font-size 16px
	line-height 24px
	-webkit-font-smoothing: antialiased;
	-moz-font-smoothing: antialiased;
	-o-font-smoothing: antialiased;
	font-smoothing: antialiased;

.layout
	max-width $max-width
	min-width $min-width
	margin 0 auto
	padding 30px
	box-sizing border-box
	position relative
	//background #c2fcc4

.clearfix:after{
	content "."
	display block
	height 0
	visibility hidden
	clear both
}
ul,li
	margin 0
	padding 0
	list-style-type none
a
